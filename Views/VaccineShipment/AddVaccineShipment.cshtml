@model AddVaccineShipmentViewModel
@{ 
    ViewData["Title"] = "Add Vaccine Shipment"; 
}

    <h1>Add Vaccine Shipment</h1>
<div asp-validation-summary="All" class="text-danger"></div>

    <form asp-controller="VaccineShipment" asp-action="AddVaccineShipments" method="post">

        <div class="form-group">
            <label>Shipment Start Date </label>
            <input asp-for="StartDate" class="form-control" />
        </div>

        <div class="form-group">
            <label>Shipment End Date </label>
            <input asp-for="EndDate" class="form-control" />
        </div>

        <div class="form-group">
            <label>Choose Vaccine type</label>
            <select asp-for="VaccineID" class="form-control">
                <option value="Pfizer"></option>
                <option value="Moderna"></option>
                <option value="Johnson & Johnson"></option>
            </select>
        </div>

        <div class="form-group">
            <label>Choose Facility type</label>
            <select asp-for="FacilityID" asp-items="ViewBag.AllFacilities" class="form-control">
            </select>
        </div>

        <div class="form-group">
            <label>Enter Number Of Vaccines Shipped </label>
            <input asp-for="NumberOfVaccinesShipped" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Add Vaccine Shipment</button>
    </form>